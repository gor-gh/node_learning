<div class="data-form">
    <form action="<%=`/users/${user._id}/update?_method=PUT`%>" method="POST">
        <h2>Change user settings</h2>
        <label for="inputFirstName">First Name</label>
        <input type="text" id="inputFirstName" name="first" placeholder="First Name" value="<%=user.name.first%>"
            autofocus>
        <label for="inputLastName">Last Name</label>
        <input type="text" id="inputLastName" name="last" value="<%=user.name.last%>" placeholder="Last Name">
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" value="<%=user.password%>" placeholder="Password"
            required>
        <label for="inputEmail">Email</label>
        <input type="email" id="inputEmail" name="email" value="<%= user.email %>" placeholder="Email" required>
        <label for="inputZipCode">Zip Code</label>
        <input type="text" id="inputZipCode" name="zipCode" value="<%= user.zipCode%>" placeholder="Zip Code" required
            pattern="[0-9]{5}">
        <button type="submit">Sign Up</button>
    </form>
</div>