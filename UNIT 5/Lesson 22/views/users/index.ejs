<div class="center mt-4">
    <h2 class="display-4">Users Table</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        <tbody>
            <% users.forEach( user => { %>
            <tr>
                <td>
                    <a href="<%= `/users/${user._id}` %>">
                        <%= user.fullName %>
                    </a>
                </td>
                <td>
                    <%= user.email %>
                </td>
                <td>
                    <a href="<%= `/users/${user._id}/edit` %>">Edit</a>
                </td>
                <td>
                    <a href="<%= `/users/${user._id}/delete?_method=DELETE` %>"
                        onclick="return confirm('Are you sure you want to delete a user?')">
                        Delete
                    </a>
                </td>
            </tr>
            <%});%>
        </tbody>
        </thead>
    </table>
</div>